@model FarmerBrothers.Models.OriginalEventDetailsResultsModel
@{
    ViewBag.Title = "OriginalEventDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#originalEventDetailsResults').ejGrid({
            exportToExcelAction : '@Url.Action("OriginalEventDetailsExcelExport", "Reports")',
            toolbarSettings: { showToolbar: true, toolbarItems: [ej.Grid.ToolBarItems.ExcelExport] },
            allowPaging: true,
            isResponsive: true,
            enableResponsiveRow: true,
            allowSorting:true ,
            allowTextWrap: true,
            queryCellInfo:"queryCellInfo",
            pageSettings: { pageSize: 25 },
            allowResizeToFit : true,
            dataSource : @Html.Raw(Json.Encode(Model.SearchResults)),
            columns: [
                { field: "EventID", headerText: "EventID" },
                { field: "Status", headerText: "Status" },
                { field: "EntryDate", headerText: "Entrydate" },
                { field: "CustomerRegion", headerText: "Customer Region#" },
                { field: "CustomerRegionName", headerText: "Customer Region Name" },
                { field: "CustomerBranch", headerText: "Customer Branch#" },
                { field: "CustomerBranchName", headerText: "Customer Branch Name" },
                { field: "JDE", headerText: "JDE#" },
                { field: "CompanyName", headerText: "Company Name" },
                { field: "Address1", headerText: "Address1" },
                { field: "City", headerText: "City" },
                { field: "State", headerText: "State" },
                { field: "PostalCode", headerText: "Postal Code" },
                { field: "DispatchCompany", headerText: "Dispatch Company" },
                { field: "DispatchDate", headerText: "Dispatch Date" },
                { field: "ElapsedTime", headerText: "ElapsedTime" }
            ]
        });
    });
</script>

