                let MyData = {
                    amount: Amount * 100, //Converting Cents to Dollar amount
                    source: token,
                    currency: "usd",
                    apiurl: BaseUrl + "v1/charges",
                    btoken: authToken,
                    capture: true,
                    receipt_email: receiptsEmail,
                    external_reference_id: $("#WorkorderId").val(), //WorkorderId
                    external_customer_reference: $("#CustomerId").val(), // CustomerId
                    metadata: { userid: userid } //user who did the transaction
                };

                $.ajax({
                    type: "POST",
                    url: "https://fbclover.mktalt.com/charge",
                    data: JSON.stringify(MyData),
                    contentType: 'application/json',
                    dataType: 'json',
                    success: function (jsonResult) {
                        if (jsonResult.status == "succeeded") {
                            $("#cloverTransactionId").val(jsonResult.id);
                        }
                        $('[data-popup="popup-cloverpayment"]').fadeOut(350);

                        $("#cardProcessform").trigger("submit");
                    },
                    error: function (er) {
                        AlertPopup("Problem in Processing the Payment, Please contact Support !");
                    }
                });
                    }

