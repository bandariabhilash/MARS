@model FarmerBrothers.Models.AdminModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Marketing Alternatives Service Dispatch Application – MARS</title>
    <meta charset="utf-8">
    <meta name="description" content="Your description">
    <meta name="keywords" content="Your keywords">
    <meta name="author" content="Your name">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link href="~/icon/font-awesome.css" rel="stylesheet">
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script src="~/js/jquery.backgroundSize.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $(".fbbg-img").css({ backgroundSize: "cover" });
        });
    </script>
</head>
<body bgcolor="#ffffff">

    <!--==============================Header=================================-->
    <div class="wrapper bg-col">
        <a href="#" style="position: absolute;margin-left: 78px;top: -5px;">
        <!--<img src="~/images/logo.png" style="width: 94px;" />-->
        </a>
        <div class="main">
            <!--<header id="header">
                <h1 class="logo"><a href="~/Home/Login">logo</a></h1>
            </header>-->
        </div>
    </div>
    <!--==============================Header End=================================-->
    <!--==============================Login=================================-->
    <div class="wrapper fbbg-img">
        <div class="main">
            <div class="login">
                <img src="~/images/login-header-img.png" />
                @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
                {
                    if (Request.QueryString["userid"] != null)
                    {
                        Session["UserIdFromEmail"] = Request.QueryString["userid"];
                    }
                    @Html.AntiForgeryToken()
                    <h4>Change Password</h4>
                    <div class="e-login">

                        @Html.PasswordFor(u => u.CurrentPassword, new { @class = "pwd-login", @placeholder = "Current Password" })
                        <i class="icon-lock"></i>
                    </div>
                    <br />
                    <div class="e-login">

                        @Html.PasswordFor(u => u.NewPassword, new { @class = "pwd-login", @placeholder = "New Password" })
                        <i class="icon-lock"></i>
                    </div>
                    <br />
                    <div class="e-login">

                        @Html.PasswordFor(u => u.ConfirmPassowrd, new { @class = "pwd-login", @placeholder = "Confirm Password" })
                        <i class="icon-lock"></i>
                    </div>
                    <input type="submit" name="submit" class="login-button" value="Change Password">
                }
                @*<div class="forgot-y-p">
                    <a href="#" class="fyp">Forgot Your Password?</a>
                </div>*@
                <div class="fpc">

                    <label style="color:red">@ViewBag.Message</label>

                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <!--==============================Login End=================================-->
    <!--==============================footer=================================-->
    <footer>
        <div class="main">
            <div class="footer-text">
                <a href="#">&copy; Marketing Alternatives Inc.</a>
            </div>
        </div>
    </footer>
    <!--==============================end footer=================================-->

</body>
</html>
