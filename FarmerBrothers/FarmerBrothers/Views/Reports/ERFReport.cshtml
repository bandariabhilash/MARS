            @*window.open('@Url.Action("ErfDetails",  "ERF")' + "/" + args.data["WorkorderErfid"], 'Erf_' + args.data["WorkorderErfid"], '');*@
            window.location.href = "@Url.Action("ErfDetails", "ERF")" + "/"+ args.data["WorkorderErfid"];
